contract Gateway is owned {
    
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 public avmASM = IERC20(0xc55bFF23465a03E5fB17D324342D9Ec12cAF9dB3);

    token avmASMToken = token(0xc55bFF23465a03E5fB17D324342D9Ec12cAF9dB3); 
    address public reward = address(0x68604fB18fdD840D91c43e1FEa37E90AE94837b6);
    address public signAddr = address(0xD196c8cFc946dA1E67539Ea7646AdC3fB0d3F4aF);
    
    event getBrunInfo(address crosschainDestination, uint256 amount);
    
    address owner;
    address public adapter;
    
    mapping(bytes32 => bool) usedHash;
    
    constructor () public {
        owner = msg.sender;
        adapter = address(0);
    }
    
    function mintASM(address crosschainDestination, uint256 _amount, uint256 nonce, uint8 v, bytes32 r, bytes32 s ) public returns (bool success) {
        
        require(msg.sender == adapter);
        bytes32 msgHash = getHash(crosschainDestination, _amount, nonce);
        require(!usedHash[msgHash]);
        require(RecoverAddress(msgHash, v, r, s, signAddr));
        usedHash[msgHash]=true;
        avmASMToken.mint(address(this), _amount);
        avmASM.safeTransfer(crosschainDestination, _amount*997/1000);
        avmASM.safeTransfer(reward, _amount*3/1000);
        success = true;
    }
    
    function burn(address msgSender, address crosschainDestination, uint256 _amount) public returns  (bool success){
        
        require(msg.sender == adapter);
        avmASM.safeTransferFrom(msgSender, address(this), _amount);
        avmASMToken.burn(address(this), _amount*997/1000);
        avmASM.safeTransfer(reward, _amount*3/1000);
        
        emit getBrunInfo(crosschainDestination, _amount);
        success = true;
    }
    
    function transferTokenOwnerShip(address newOwer) public onlyOwner returns (bool) {
        require(newOwer!=address(0));
        avmASMToken.transferOwnerShip(newOwer);
    }
    
    function setReward(address newReward) public onlyOwner returns (bool) {
        require(newReward!=address(0));
        reward = address(newReward);
    }
    
    function setAdapter(address newAdapter) public onlyOwner returns (bool) {
        adapter = address(newAdapter);
    }
    
    function getHash(address signAddr, uint256 amount, uint256 nonce) internal returns (bytes32) {
        return keccak256(abi.encode(adapter, avmASMToken, signAddr, amount, nonce));
    }
    
    function RecoverAddress(bytes32 msgHash, uint8 v, bytes32 r, bytes32 s,address addr) internal returns (bool) {
        return ecrecover(msgHash, v, r, s)==addr;
    }
}
