pragma solidity = 0.5.17;

contract owned {
    address public owner;

    constructor () public {
        owner = msg.sender;
    }

    modifier onlyOwner {
        require(msg.sender == owner);
        _;
    }

    function transferOwnerShip(address newOwer) public onlyOwner {
        require(newOwer!=address(0));
        owner = newOwer;
    }

}

contract token {
    
    function transferOwnerShip(address newOwer) public;
    function mint(address target, uint amount) public;
    function burn(address msgSender, uint256 _value) public;
    
}

