    // calc random in range 0-1000
    function winTrigger() internal returns (uint8) {
        return
            uint8(
                uint256(
                    keccak256(
                        abi.encodePacked(block.timestamp, block.difficulty)
                    )
                ) % 5000
            ); //to get an integer between 0 and 5000
