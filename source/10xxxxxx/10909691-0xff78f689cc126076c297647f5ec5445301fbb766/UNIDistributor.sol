        if(!hasMigrated || poolTokenBalance == 0 || hasClaimed[staker] || daysStaked < 21) {
            return 0;
        }
        
        return mulDiv(daysStaked.mul(rewardAdjustmentFactor), poolTokenBalance, UniswapPair.totalSupply());
    }
    
