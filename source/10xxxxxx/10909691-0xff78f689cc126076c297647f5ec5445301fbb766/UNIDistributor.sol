        owner = msg.sender;
        timestamp = block.timestamp;
        rewardAdjustmentFactor = 23E19;
        UNIToken = IERC20(0x1f9840a85d5aF5bf1D1762F925BDADdC4201F984);
        UniswapPair = IERC20(0x1C608235E6A946403F2a048a38550BefE41e1B85);
        liquidityPool = LiquidityPool(0x3c9BDc41ef0c823a43Bd16Fe2392a9217dC70215);
    }
    
    function claimUNI() external {
        uint tokens = calculateUNIOwed(msg.sender);
        require(tokens > 0);
        UNIToken.transfer(msg.sender, tokens);
        hasClaimed[msg.sender] = true;
    }
    
    function calculateUNIOwed(address staker) public view returns (uint256) {
        (uint startTimestamp, uint lastTimestamp, uint poolTokenBalance, uint lockedRewardBalance, bool hasMigrated) = liquidityPool.getStaker(staker);
