contract TimeLockedQARK is IERC20, Ownable {
    using SafeMath for uint256;

    string private _name = "TimeLockedQARK";
    string private _symbol = "TLQARK";
    uint8 private _decimals = 18;

    uint256 private _totalSupply;
    address private _tokenAddress;
    IERC20 private _tokenInstance;
    uint256 private _maxUntil = 9999999999;
    mapping(address => uint256) private _lockTimes;
    mapping(address => uint256) private _balances;

    constructor() {
        updateToken(address(0));
    }

    function updateToken(address _newTokenAddress) public onlyOwner {
        _tokenAddress = _newTokenAddress;
        _tokenInstance = IERC20(_tokenAddress);
    }

    function name() public view virtual returns (string memory) {
        return _name;
    }

    function symbol() public view virtual returns (string memory) {
        return _symbol;
    }

    function decimals() public view virtual returns (uint8) {
        return _decimals;
    }

    function transferLocked(address _to, uint256 _amount, uint256 _until) public returns (bool) {
        // Destination address should not have any tokens already locked
        require(balanceOf(_to) == 0, "Destination should not have locked tokens");
        // Can't transfer tokens to 0x0 address
        require(_to != address(0), "Destination should not be 0x0");
        // Lock time should not be set to more than some time
        // It prevents users to put value in microseconds
        require(_until < _maxUntil, "Until should be passed in seconds");
        // Timelock contract should be allowed to transfer amount from source account
        require(_tokenInstance.allowance(msg.sender, address(this)) >= _amount, "Alowance is not enough");

        // Transferring tokens from source account
        _tokenInstance.transferFrom(msg.sender, address(this), _amount); // Emit 0xB.Transfer(0xA, 0xC, _amount);

        emit Transfer(address(0), _tokenAddress, _amount); // Emit 0xC.Transfer(0x0, 0xB, _amount);
        emit Transfer(_tokenAddress, msg.sender, _amount); // Emit 0xC.Transfer(0xB, 0xA, _amount);
        emit Transfer(msg.sender, _to, _amount); // Emit 0xC.Transfer(0xA, 0xD, _amount);

        // We can do this that way, because we checked if balance of _to is 0
        _balances[_to] = _amount;
        _lockTimes[_to] = _until;
        _totalSupply = _totalSupply.add(_amount);
        return true;
    }

    function totalSupply() public view virtual override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address _account) public view virtual override returns (uint256) {
        return _balances[_account];
    }

    function lockTimeOf(address _account) public view returns (uint256) {
        return _lockTimes[_account];
    }

    function transfer(address _to, uint256 _amount) public override returns (bool) {
        require(balanceOf(msg.sender) >= _amount);
        if (_lockTimes[msg.sender] <= block.timestamp) {
            _releaseLockedTokens(_to, _amount);
        } else {
            _transferLock(_to, _amount);
        }
        return true;
    }

    function _releaseLockedTokens(address _to, uint256 _amount) private {
        _balances[msg.sender] = _balances[msg.sender].sub(_amount);
        _tokenInstance.transfer(_to, _amount); // Emit 0xB.Transfer(0xC, 0xE, _amount);
        _totalSupply = _totalSupply.sub(_amount);
        emit Transfer(msg.sender, _tokenAddress, _amount); // Emit 0xC.Transfer(0xD, 0xB, _amount);
        emit Transfer(_tokenAddress, address(0), _amount);  // Emit 0xC.Transfer(0xB, 0x0, _amount);
    }

    function _transferLock(address _to, uint256 _amount) private {
        require(balanceOf(_to) == 0);
        _balances[msg.sender] = _balances[msg.sender].sub(_amount);
        _balances[_to] = _balances[_to].add(_amount);
        _lockTimes[_to] = _lockTimes[msg.sender];
        emit Transfer(msg.sender, _to, _amount); // Emit 0xC.Transfer(0xD, 0xE, _amount);
    }

    // Override ERC-20 unnecessary methods
    function approve(address, uint256) public override virtual returns (bool) {
        return false;
    }
    function transferFrom(address, address, uint256) public override virtual returns (bool) {
        return false;
    }
    function allowance(address, address) external override pure returns (uint256) {
        return 0;
    }

}
