        // Copied from UniswapV2Library.getAmountOut
        uint cashAmountWithFee = amount.mul(997);
        uint numerator = cashAmountWithFee.mul(daiReserve);
        uint denominator = cashReserve.mul(1000).add(cashAmountWithFee);
        uint daiAmountOut = numerator / denominator;

        if (daiAmountOut < amount.mul(MIN_CASH_PRICE)) {
            // BAC execution price is below $1
            return;
        }

        // Copied from UniswapV2Router02.sol
        // https://github.com/Uniswap/uniswap-v2-periphery/blob/04b3dae3179252066221876297b8466f54cadab7/contracts/UniswapV2Router02.sol#L212
        (uint amountOut0, uint amountOut1) = cash < dai ? (uint(0), daiAmountOut) : (daiAmountOut, uint(0));
        cash.safeTransfer(address(bacDai), amount);
        bacDai.swap(amountOut0, amountOut1, address(this), new bytes(0));
    }

    function swapMyShareToDai(uint256 amount) public {
        require(amount > 0, "no amount");

        (uint reserve0, uint reserve1, ) = basDai.getReserves();
        (uint cashReserve, uint daiReserve) = share < dai ? (reserve0, reserve1) : (reserve1, reserve0);

        // Copied from UniswapV2Library.getAmountOut
        uint cashAmountWithFee = amount.mul(997);
        uint numerator = cashAmountWithFee.mul(daiReserve);
        uint denominator = cashReserve.mul(1000).add(cashAmountWithFee);
        uint daiAmountOut = numerator / denominator;

        // Copied from UniswapV2Router02.sol
        // https://github.com/Uniswap/uniswap-v2-periphery/blob/04b3dae3179252066221876297b8466f54cadab7/contracts/UniswapV2Router02.sol#L212
        (uint amountOut0, uint amountOut1) = share < dai ? (uint(0), daiAmountOut) : (daiAmountOut, uint(0));
        share.safeTransfer(address(basDai), amount);
        basDai.swap(amountOut0, amountOut1, address(this), new bytes(0));
    }

