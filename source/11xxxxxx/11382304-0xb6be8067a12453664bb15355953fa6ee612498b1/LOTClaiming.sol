interface IERC1155 {
	function safeTransferFrom(
		address _from,
		address _to,
		uint256 _id,
		uint256 _amount,
		bytes calldata _data
	) external;

	function balanceOf(address _owner, uint256 _id) external view returns (uint256);
}

contract LOTClaiming is Pausable, ReentrancyGuard {
	using ECDSA for bytes32;
	using SafeMath for uint256;

	address public withdrawSigner;
	address public denMultiSig;
	address public denLotStore;
	address public lotAddress;

	mapping(uint256 => bool) usedNonces;

	event Claimed(address indexed user, uint256 nonce, uint256 id, uint256 amount);

	constructor(
		address _withdrawSigner,
		address _lotStore,
		address _erc1155Address
	) public {
		lotAddress = _erc1155Address;
		withdrawSigner = _withdrawSigner;
		denLotStore = _lotStore;
		denMultiSig = msg.sender;
	}

	modifier onlyDenMultiSig {
		require(msg.sender == denMultiSig, "not owner");
		_;
	}

	function claim(
		uint256 id,
		uint256 amount,
		uint256 timestamp,
		uint256 nonce,
		bytes memory sig
	) public nonReentrant whenNotPaused() {
		require(!usedNonces[nonce], "duplicate transaction found, start new request from Den");
		require(now < timestamp, "withdraw period expired");
		usedNonces[nonce] = true;

		// this recreates the message that was signed on the client
		bytes32 message = keccak256(abi.encodePacked(msg.sender, id, amount, timestamp, nonce, address(this)))
			.toEthSignedMessageHash();

		require(message.recover(sig) == withdrawSigner, "request not signed by den");
		require(IERC1155(lotAddress).balanceOf(denLotStore, id) >= amount, "tokens not present");

		IERC1155(lotAddress).safeTransferFrom(denLotStore, msg.sender, id, amount, "");
		emit Claimed(msg.sender, nonce, id, amount);
	}

	function setDenLotStore(address account) public onlyDenMultiSig {
		denLotStore = account;
	}

	function setWithdrawSigner(address account) public onlyDenMultiSig {
		withdrawSigner = account;
	}

	function setMultiSig(address _denMultiSig) external onlyDenMultiSig {
		denMultiSig = _denMultiSig;
	}
}
