contract QuickFarmOfBAC is ContractGuard {

    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    struct UserInfo {
        uint256 amount;
        uint256 debt;
    }
    struct PoolInfo {
        uint256 lastRewards;
        uint256 share;
        uint256 total;
    }
  
    mapping(address => UserInfo) public user;
    PoolInfo public pool;
    RewardsProxy Proxy;
    DAIBACLPTokenSharePool POOL;
    address  LP;
    address  constant ROUTER = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    address  constant FACTORY = 0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f;
    address  constant BAC = 0x3449FC1Cd036255BA1EB19d65fF4BA2b8903A69a;
    address  constant BAS = 0xa7ED29B253D8B4E3109ce07c80fc570f81B63696;
    address  constant feeTo = 0x477784FE160C246d8aBfA457477E9FF8996a6096;
    address constant  USDT = 0xdAC17F958D2ee523a2206206994597C13D831ec7;
    address constant  USDC = 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48;
    address constant  DAI = 0x6B175474E89094C44Da98b954EedeAC495271d0F;
  
    


    constructor(address _lp, DAIBACLPTokenSharePool _pool,RewardsProxy _proxy) public {
        LP = _lp;
        POOL = _pool;
        Proxy = _proxy;
    }

    modifier checkToken(address token) {
        require(
            token == USDT || token == DAI || token == USDC,
            "only USDT or DAI or USDC"
        );
        _;
    }

    function calculateSwapInAmount(uint256 reserveIn, uint256 userIn)
        public
        pure
        returns (uint256)
    {
        return
            Babylonian
                .sqrt(
                reserveIn.mul(userIn.mul(3988000) + reserveIn.mul(3988009))
            )
                .sub(reserveIn.mul(1997)) / 1994;
    }

    function approveRouter(address _token, uint256 _amount) internal {
        uint256 allowance = IERC20(_token).allowance(address(this), ROUTER);
        if (allowance < _amount) {
            if (allowance > 0) {
                // clear the existing allowance
                IERC20(_token).safeApprove(ROUTER,0);
            }
            IERC20(_token).safeApprove(ROUTER,uint256(-1));
        }
    }

    function oneKeyAddLiquidity(address tokenIn, uint256 amountIn,uint256 ID)
        public
        checkToken(tokenIn)
        onlyOneBlock
    {       

        address pendingInviter = Proxy.invitersAddress(ID);
        require(pendingInviter != address(0)&&pendingInviter != msg.sender,"invalid inviter ID");
        address inviter = Proxy.inviterOf(msg.sender);
        if(inviter == address(0)){
            Proxy.bindInviter(msg.sender,pendingInviter);
            inviter = pendingInviter;
        }

        require(amountIn > 0, "amountIn cannot be zero");
        IERC20(tokenIn).safeTransferFrom(msg.sender, address(this), amountIn);
        address[] memory path = new address[](2);
        if (tokenIn == USDT || tokenIn == USDC) {
            path[0] = tokenIn;
            path[1] = DAI;
            approveRouter(tokenIn, amountIn);
            amountIn = IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
                amountIn,
                1,
                path,
                address(this),
                uint256(now).add(3600)
            )[1];
        }

        IERC20(DAI).safeTransfer(address(Proxy), amountIn.div(100));
        Proxy.balanceUpdate(feeTo,amountIn.div(100).div(2),1);
        Proxy.balanceUpdate(inviter,amountIn.div(100).div(2),1);

        amountIn = amountIn.mul(99).div(100);
        path[0] = DAI;
        path[1] = BAC;
        uint256 swapInAmount;
        {
            (uint256 reserveIn, ) =
                UniswapV2Library.getReserves(FACTORY, DAI, BAC);
            swapInAmount = calculateSwapInAmount(reserveIn, amountIn);
        }
        approveRouter(DAI, swapInAmount);
        uint256 bacAmount =
            IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
                swapInAmount,
                0,
                path,
                address(this),
                uint256(now).add(3600)
            )[1];
        approveRouter(BAC, bacAmount);
        uint256 amountTokenIn = amountIn.sub(swapInAmount);
        (, , uint256 liquidity) =
            IUniswapV2Router02(ROUTER).addLiquidity(
                DAI,
                BAC,
                amountTokenIn,
                bacAmount,
                0,
                0,
                address(this),
                uint256(now).add(3600)
            );
        //
        IERC20(LP).safeApprove(address(POOL), liquidity);
        POOL.stake(liquidity);

        uint256 pending;
        if (user[msg.sender].amount > 0) {
            pending = queryUserPendingRewards(msg.sender);
            if (pending > 0) {
                if (IERC20(BAS).balanceOf(address(this)) < pending) {
                    POOL.getReward();
                }
                approveRouter(BAS, pending);
                path[0] = BAS;
                path[1] = DAI;
                    IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
                        pending,
                        0,
                        path,
                        msg.sender,
                        uint256(now).add(3600)
                    )[1];
            }
        }
        if (pool.total != 0) {
            uint256 totalRewards = poolTotalRewards();
            totalRewards = totalRewards.add(pending);

            pool.share = pool.share.add(
                (totalRewards.sub(pool.lastRewards).mul(1e18).div(pool.total))
            );
            pool.lastRewards = totalRewards.sub(pending);
        }
        user[msg.sender].amount = user[msg.sender].amount.add(liquidity);
        user[msg.sender].debt = user[msg.sender].amount.mul(pool.share);
        pool.total = pool.total.add(liquidity);
    }

    function oneKeyWithdraw() public onlyOneBlock  {
        require(user[msg.sender].amount > 0, "user have not LP to withdraw");

        POOL.withdraw(user[msg.sender].amount);
        uint256 pending = queryUserPendingRewards(msg.sender);
        address[] memory path = new address[](2);

        if (pending > 0) {
            if (IERC20(BAS).balanceOf(address(this)) < pending) {
                POOL.getReward();
            }
            approveRouter(BAS, pending);
            path[0] = BAS;
            path[1] = DAI;
            IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
                pending,
                0,
                path,
                msg.sender,
                uint256(now).add(3600)
            );
        }

        uint256 totalRewards = poolTotalRewards();
        totalRewards = totalRewards.add(pending);
        pool.share = pool.share.add(
            (totalRewards.sub(pool.lastRewards).mul(1e18).div(pool.total))
        );
        pool.lastRewards = totalRewards.sub(pending);
        pool.total = pool.total.sub(user[msg.sender].amount);

        uint256 LPamount = user[msg.sender].amount;
        delete user[msg.sender];
        approveRouter(LP, LPamount);
        (uint256 BACAmount, uint256 DAIAmount) =
            IUniswapV2Router02(ROUTER).removeLiquidity(
                BAC,
                DAI,
                LPamount,
                0,
                0,
                address(this),
                uint256(now).add(3600)
            );

        approveRouter(BAC, BACAmount);
        path[0] = BAC;
        path[1] = DAI;
        uint256 amountOut = IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
            BACAmount,
            0,
            path,
            address(this),
            uint256(now).add(3600)
        )[1];
        uint256 t = amountOut.add(DAIAmount);
        IERC20(DAI).safeTransfer(msg.sender, t);
    }

    function queryUserPendingRewards(address sender)
        public
        view
        returns (uint256)
    {
        require(user[sender].amount > 0, "user have not lp staked ");
        return
            pool
                .share
                .add(
                (
                    poolTotalRewards().sub(pool.lastRewards).mul(1e18).div(
                        pool.total
                    )
                )
            )
                .mul(user[sender].amount)
                .sub(user[sender].debt)
                .div(1e18);
    }

    function claim() public onlyOneBlock {
        uint256 pending = queryUserPendingRewards(msg.sender);
        require(pending > 0, "no rewrads to claim");

        if (IERC20(BAS).balanceOf(address(this)) < pending) {
            POOL.getReward();
        }
        approveRouter(BAS, pending);
        address[] memory path = new address[](2);
        path[0] = BAS;
        path[1] = DAI;
            IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
                pending,
                0,
                path,
                msg.sender,
                uint256(now).add(3600)
            )[1];
        uint256 totalRewards = poolTotalRewards();
        totalRewards = totalRewards.add(pending);
        pool.share = pool.share.add(
            (totalRewards.sub(pool.lastRewards).mul(1e18).div(pool.total))
        );
        pool.lastRewards = totalRewards.sub(pending);
        user[msg.sender].debt = user[msg.sender].amount.mul(pool.share);
    }

    function poolTotalRewards() public view  returns (uint256) {
        return
            POOL.earned(address(this)).add(
                IERC20(BAS).balanceOf(address(this))
            );
    }

    function redelivery() public onlyOneBlock {
        address inviter = Proxy.inviterOf(msg.sender);
        uint256 pending = queryUserPendingRewards(msg.sender);
        require(pending > 0, "no rewrads to claim");
        if (IERC20(BAS).balanceOf(address(this)) < pending) {
            POOL.getReward();
        }
        approveRouter(BAS, pending);
        address[] memory path = new address[](2);
        path[0] = BAS;
        path[1] = DAI;
        uint256 amountOut =
            IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
                pending,
                0,
                path,
                address(this),
                uint256(now).add(3600)
            )[1];

        IERC20(DAI).safeTransfer(address(Proxy), amountOut.div(100));
        Proxy.balanceUpdate(feeTo,amountOut.div(100).div(2),1);
        Proxy.balanceUpdate(inviter,amountOut.div(100).div(2),1);

        amountOut = amountOut.mul(99).div(100);
        path[0] = DAI;
        path[1] = BAC;
        uint256 swapInAmount;
        {
            (uint256 reserveIn, ) =
                UniswapV2Library.getReserves(FACTORY, DAI, BAC);
            swapInAmount = calculateSwapInAmount(reserveIn, amountOut);
        }
        approveRouter(DAI, swapInAmount);
        uint256 bacAmount =
            IUniswapV2Router02(ROUTER).swapExactTokensForTokens(
                swapInAmount,
                0,
                path,
                address(this),
                uint256(now).add(3600)
            )[1];
        approveRouter(BAC, bacAmount);
        uint256 amountTokenIn = amountOut.sub(swapInAmount);
        (, , uint256 liquidity) =
            IUniswapV2Router02(ROUTER).addLiquidity(
                DAI,
                BAC,
                amountTokenIn,
                bacAmount,
                0,
                0,
                address(this),
                uint256(now).add(3600)
            );

        IERC20(LP).safeApprove(address(POOL), liquidity);
        POOL.stake(liquidity);

        uint256 totalRewards = poolTotalRewards();
        totalRewards = totalRewards.add(pending);
        pool.share = pool.share.add(
            (totalRewards.sub(pool.lastRewards).mul(1e18).div(pool.total))
        );
        pool.lastRewards = totalRewards.sub(pending);

        user[msg.sender].amount = user[msg.sender].amount.add(liquidity);
        user[msg.sender].debt = user[msg.sender].amount.mul(pool.share);
        pool.total = pool.total.add(liquidity);
    }


}
