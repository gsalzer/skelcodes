pragma solidity ^0.6.12;






contract  UniMarket is IMarket{

    using SafeMath for uint;

    IUniswapV2Router01 public route;

    constructor(address _route)public{
        route=IUniswapV2Router01(_route);
    }

    function getAmountOut(address fromToken, address toToken,uint amountIn)
    external override view returns (uint amountOut) {
        (uint reserveA, uint reserveB)=UniswapV2Library.getReserves(route.factory(),fromToken,toToken);
        amountOut = UniswapV2Library.getAmountOut(amountIn,reserveA,reserveB);
    }

    function getAmountIn(address fromToken, address toToken,uint amountOut)
    external override view returns (uint amountIn) {
        (uint reserveA, uint reserveB)=UniswapV2Library.getReserves(route.factory(),fromToken,toToken);
        amountIn = UniswapV2Library.getAmountIn(amountOut,reserveA,reserveB);
    }

    function getAmountsOut(uint amountIn,address[] calldata path)
    external override view returns (uint[] memory amounts) {
        amounts=UniswapV2Library.getAmountsOut(route.factory(),amountIn,path);
    }

    function getAmountsIn(uint amountOut,address[] calldata path)
    external override view returns (uint[] memory amounts) {
        amounts=UniswapV2Library.getAmountsIn(route.factory(),amountOut,path);
    }

    function swap(
        address fromToken,
        uint amountIn,
        address toToken,
        uint amountOut,
        address to)
    external override{
        IUniswapV2Pair pair = IUniswapV2Pair(UniswapV2Library.pairFor(route.factory(),fromToken, toToken));
        IERC20(fromToken).transfer(address(pair), amountIn);
        (address token0,) = UniswapV2Library.sortTokens(fromToken, toToken);
        (uint amount0Out, uint amount1Out) = fromToken == token0 ? (uint(0), amountOut) : (amountOut, uint(0));
        pair.swap(amount0Out,amount1Out, to, new bytes(0));
    }


    function bestSwap(
        uint amountIn,
        uint amountOut,
        address to,
        address[] calldata path)
    external override{
        IERC20 inputToken=IERC20(path[0]);
        inputToken.approve(address(route),amountIn);
        route.swapTokensForExactTokens(amountOut,amountIn,path,to,block.timestamp);
    }
}
