interface IToshiCoinFarm {
    struct UserInfo {
        uint256 amountInPool;
        uint256 coinsReceivedToDate;
    }

    function userInfo(uint256 poolId, address user)
        external
        view
        returns (UserInfo memory);
}

contract ToshiHoldingsProxy {
    using SafeMath for uint256;

    IERC20 public toshi;
    IUniswapV2Pair public toshiEthLp;
    IToshiCoinFarm public toshiCoinFarm;

    constructor(
        IERC20 _toshi,
        IUniswapV2Pair _toshiEthLp,
        IToshiCoinFarm _toshiCoinFarm
    ) public {
        toshi = _toshi;
        toshiEthLp = _toshiEthLp;
        toshiCoinFarm = _toshiCoinFarm;
    }

    function decimals() external pure returns (uint8) {
        return uint8(18);
    }

    function name() external pure returns (string memory) {
        return "Total TOSHI Holdings";
    }

    function symbol() external pure returns (string memory) {
        return "ToshiTotal";
    }

    function totalSupply() external view returns (uint256) {
        return toshi.totalSupply();
    }

    function balanceOf(address user) external view returns (uint256) {
        uint256 holdings = 0;

        uint256 lpSupply = toshiEthLp.totalSupply();
        uint256 toshiInPool = toshi.balanceOf(address(toshiEthLp));

        uint256 lpBalance = toshiEthLp.balanceOf(user);

        lpBalance = lpBalance.add(toshiCoinFarm.userInfo(0, user).amountInPool);

        holdings = holdings.add(lpBalance.mul(toshiInPool)).div(lpSupply);
        holdings = holdings.add(toshi.balanceOf(user));

        return holdings;
    }
}
