        // åå¹¶çæ¶åï¼s0ç¨è®°å½çä»·æ ¼ï¼s1ç¨kä¿®æ­£ç
        if (enlarge) {
            oraclePrice = oraclePrice * (1 ether + k + impactCost(dcuAmount)) / 1 ether;
        } else {
            oraclePrice = oraclePrice * 1 ether / (1 ether + k + impactCost(dcuAmount));
        }
    }

