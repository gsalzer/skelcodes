pragma solidity 0.8.6;

import "./AbstractStaking.sol";
import "./interfaces/INil.sol";
import "./interfaces/INilStaking.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

/**
 * @title NilStaking
 * @author Nil DAO
 */
contract NilStaking is AbstractStaking, INilStaking {
    using SafeERC20 for INil;

    address public immutable vNil;

    constructor(
        INil nil_,
        address dao,
        address vNil_,
        uint256 rewardRatePerSecond,
        uint256 votesRatePerSecond
    ) AbstractStaking(nil_, dao, rewardRatePerSecond, votesRatePerSecond) {
        require(vNil_ != address(0), "NilStaking:ILLEGAL_ADDRESS");
        vNil = vNil_;
    }

    function stake(uint256 amount) external override nonReentrant {
        nil.safeTransferFrom(msg.sender, address(this), amount);
        _stake(msg.sender, amount);
    }

    function mintAndStake(address account, uint256 amount) external override nonReentrant {
        require(msg.sender == vNil, "NilStaking:ACCESS_DENIED");
        nil.mint(address(this), amount);
        _stake(account, amount);
    }

    function unstake(uint256 amount) external override nonReentrant {
        _unstake(msg.sender, amount);
        nil.safeTransfer(msg.sender, amount);
    }
}

