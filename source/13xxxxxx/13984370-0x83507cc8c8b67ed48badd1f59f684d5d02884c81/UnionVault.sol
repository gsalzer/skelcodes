        // sell CVX rewards for ETH
        uint256 _cvxAmount = IERC20(CVX_TOKEN).balanceOf(address(this));
        if (_cvxAmount > 0) {
            cvxEthSwap.exchange_underlying{value: 0}(
                CVXETH_CVX_INDEX,
                CVXETH_ETH_INDEX,
                _cvxAmount,
                0
            );
