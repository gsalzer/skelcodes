contract ExternalAdapter is AccessControlUpgradeable, IExternalAdapter {
    using SafeERC20 for IERC20;
    using Address for address;

    bytes32 public constant PROTOCOL_ROLE = keccak256("PROTOCOL_ROLE");
    /// @notice amount of ETH dust allowed to be sent to the user
    uint256 public constant DUST_AMOUNT = 10**12;

    uint256 public constant SLIPPAGE_ACCURACY = 10**18;

    address public controller;

    address public clustersLock;

    address public treasuryAddress;

    uint256 public slippageTolerance;
    
    mapping(address => bool) public comissionAllowed;

    function initialize(address _controller, address _clustersLock, address _treasury) external initializer {
       require(_controller != address(0) && _treasury != address(0), "Wrong address!");
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());

        controller = _controller;
        clustersLock = _clustersLock;
        treasuryAddress = _treasury;
        slippageTolerance = 1e16;
    }

    receive() external payable {}

    /**********
     * ADMIN INTERFACE
     **********/
    
    /// @notice Function that allows contract owner to update treasury address;
    /// @param _newTreasury Address of new treasury.
    function setTreasuryAddress(address _newTreasury) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_newTreasury != address(0), "Incorrect address");
        treasuryAddress = _newTreasury;
    }

    function allowComission(address _asset, bool _allowed) external onlyRole(DEFAULT_ADMIN_ROLE) {
        comissionAllowed[_asset] = _allowed;
    }

    function setSlippage(uint256 _newSlippage) external onlyRole(DEFAULT_ADMIN_ROLE) {
        slippageTolerance = _newSlippage;
    }

    /**********
     * EXTERNAL PROTOCOL INTERFACE
     **********/

    function deposit(address _asset) external payable override returns (uint256) {
        uint256 ethToSpend = msg.value - ((msg.value * slippageTolerance) / SLIPPAGE_ACCURACY);
        uint256 clusterAmount = IController(controller).getClusterAmountFromEth(ethToSpend, _asset);
        (uint256[] memory underlyingAmounts, uint256[] memory ethPortion, , uint256 ethCalculated) = IController(controller).getUnderlyingsInfo(
            _asset,
            clusterAmount
        );

        require(msg.value >= ethCalculated, "Not enough ether sent");
        uint256 ethComission = IController(controller).getDepositComission(_asset, ethCalculated);
        _coverComission(_asset, ethComission);

        address[] memory underlyings = IClusterToken(_asset).getUnderlyings();
        address adapter = IController(controller).adapters(_asset);
        for (uint256 i = 0; i < underlyings.length; i++) {
            IDexAdapter(adapter).swapETHToUnderlying{value: ethPortion[i]}(underlyings[i], underlyingAmounts[i]);
            IERC20(underlyings[i]).safeApprove(_asset, 0);
            IERC20(underlyings[i]).safeApprove(_asset, underlyingAmounts[i]);
        }

        IClusterToken(_asset).assembleByAdapter(clusterAmount);
        IERC20(_asset).safeTransfer(_msgSender(), clusterAmount);

        // Return leftover eth
        if (address(this).balance > DUST_AMOUNT) {
            Address.sendValue(payable(_msgSender()), address(this).balance);
        }

        return clusterAmount;
    }

    function withdraw(address _asset, uint256 _clusterAmount) external override returns (uint256) {
        IERC20(_asset).safeTransferFrom(_msgSender(), address(this), _clusterAmount);
        IClusterToken(_asset).disassembleByAdapter(_clusterAmount);

        address[] memory underlyings = IClusterToken(_asset).getUnderlyings();
        uint256[] memory underlyingAmounts = new uint256[](underlyings.length);
        address adapter = IController(controller).adapters(_asset);
        for (uint256 i = 0; i < underlyings.length; i++) {
            underlyingAmounts[i] = IERC20(underlyings[i]).balanceOf(address(this));

            IERC20(underlyings[i]).safeApprove(adapter, 0);
            IERC20(underlyings[i]).safeApprove(adapter, underlyingAmounts[i]);
        }
        IDexAdapter(adapter).swapUnderlyingsToETH(underlyingAmounts, underlyings);

        uint256 ethComission = IController(controller).getRedeemComission(_asset, address(this).balance);
        _coverComission(_asset, ethComission);

        uint256 ethAmount = address(this).balance;
        Address.sendValue(payable(_msgSender()), ethAmount);
        return ethAmount;
    }

    /**********
     * VIEW INTERFACE
     **********/

    function getTotalClusterBalance(address _asset, address _user) external view override returns (uint256) {
        uint256 clusterBalance = IERC20(_asset).balanceOf(_user);
        uint256 clusterOnLock = _getLockedAmount(_asset);

        return clusterBalance + clusterOnLock;
    }

    /**********
     * INTERNAL HELPERS
     **********/

    function _getLockedAmount(address _asset) internal view returns (uint256) {
        //IClustersLock(clustersLock).userInfo(_getPoolId(_asset), _user).amount;
        // TODO Implement
        return 0;
    }

    function _coverComission(address _asset, uint256 _ethComission) internal {
        if (comissionAllowed[_asset] && _ethComission != 0) {
            Address.sendValue(payable(treasuryAddress), _ethComission);
        }
    }
}
