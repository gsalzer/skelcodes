    uint256 public constant MAX_SUPPLY = uint248(1e12 ether);

    // for DAO.
    uint256 public constant AMOUNT_DAO = MAX_SUPPLY / 100 * 20;
    address public constant ADDR_DAO = 0x80590d9F797bb32765662061497f9B15e29770dA;

    // for staking
    uint256 public constant AMOUNT_STAKING = MAX_SUPPLY / 100 * 20;
    address public constant ADDR_STAKING = 0x2F16bF23207dE59e077dFFc62FFf72BE4Bd793ed;

    // for liquidity providers
    uint256 public constant AMOUNT_LP = MAX_SUPPLY / 100 * 10;
    address public constant ADDR_LP = 0xfAed55776Bc9C7Bc1A5E245ca613Ea6c8aF10eD9;

    // for airdrop
    uint256 public constant AMOUNT_AIREDROP = MAX_SUPPLY - (AMOUNT_DAO + AMOUNT_STAKING + AMOUNT_LP);

    mapping (address => uint256) private minted;

    constructor(){
        _mint(ADDR_DAO, AMOUNT_DAO);
        _mint(ADDR_STAKING, AMOUNT_STAKING);
        _mint(ADDR_LP, AMOUNT_LP);
        cSigner = 0x686308940C9DEe0D06aecE3f8A25552559f27d45;
    }

    address public immutable cSigner;

    function claim(uint256 amount,uint8 v, bytes32 r, bytes32 s) external {
        uint256 total = _totalSupply + amount;
        require(total <= MAX_SUPPLY, "StopDAO: Exceed max supply");
        require(minted[msg.sender] == 0, "StopDAO: Claimed");
        bytes32 digest = sha256(abi.encodePacked(msg.sender, amount.toString()));
        require(ecrecover(digest, v, r, s) == cSigner, "StopDAO: Invalid signer");
        minted[msg.sender] = 1;
        _mint(msg.sender, amount);
    }
    
