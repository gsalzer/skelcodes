pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract MetaversalBT is ERC721, Ownable{

    string private tokenMetadata;

    bool public metadataFrozen;

    event PermanentURI(string _value, uint256 indexed _id);

    constructor(string memory _tokenuri) ERC721 ("Metaversal The Programmatic Blockchain Album", "BTMV") {
        tokenMetadata = _tokenuri;
        _safeMint(msg.sender, 1);
    }

    function changeURI(string memory s) public onlyOwner {
        require(!metadataFrozen);
        tokenMetadata = s;
    }

    function freezemetadata() public onlyOwner {
        metadataFrozen = true;
        emit PermanentURI(tokenMetadata, 1);
    }

    function tokenURI(uint256 tokenId) public view virtual override returns (string memory) {
        require(_exists(tokenId), "ERC721Metadata: URI query for nonexistent token");
        return tokenMetadata;
    }
}   
