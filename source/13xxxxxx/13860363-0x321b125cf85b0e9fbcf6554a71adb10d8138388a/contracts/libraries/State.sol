/**
 * @dev Handle contract state efficiently as possbile.
 */
library State {

    //-------------------------------------------------------------------------
    // structs
    //-------------------------------------------------------------------------

    struct Data {
        uint16  _live;
        uint16  _locked;
        uint240 _unused;
    }

    //-------------------------------------------------------------------------
    // interface
    //-------------------------------------------------------------------------

    function setLive(Data storage data, uint256 enable)
        internal
     {
        data._live = uint16(enable);
    }

    //-------------------------------------------------------------------------

    function setLocked(Data storage data, uint256 locked)
        internal
    {
        data._locked = uint16(locked);
    }

}

