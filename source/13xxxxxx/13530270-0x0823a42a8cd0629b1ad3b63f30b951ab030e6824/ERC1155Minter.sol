    struct Bid {
        address _bidder;
        uint256 _bidAmount;
    }

    function _divideMoney(
        uint256 _amountToDivide,
        address _admin,
        address _creator
    ) external;

    function bid(
        uint256 _tokenID,
        address _bidder,
        uint256 _bidAmount,
        uint256 _bidDuration
    ) external;

    function claimNFT(
        uint256 _tokenID,
        address _bidder,
        address _admin,
